build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

library 
  ghc-options:   -Wall -fwarn-tabs  -fno-warn-deprecations -O2
  hs-source-dirs:      src
  default-language:    Haskell2010
  build-depends:       base >=4.9 && <5.0
                     , directory
                     , filepath
                     , lens
                     , megaparsec
                     , prettyprinter
                     , safe
                     , text
                     , time

  exposed-modules:     GenerateLenses.Main
                     , GenerateLenses.Parser
                     , GenerateLenses.Lens
                     , MakeImportQualified.Main
                     , DevUtils.ImportLine
                     , GenerateModule.Main
                     , GenerateModule.Internal
                     , GenerateModule.Templates



executable dev-GenerateLenses
  main-is:             GenerateLenses.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.9 && <4.10
                     , dev-utils
  hs-source-dirs:      app
  default-language:    Haskell2010

executable dev-MakeImportQualified
  main-is:             MakeImportQualified.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.9 && <4.10
                     , dev-utils
  hs-source-dirs:      app
  default-language:    Haskell2010

executable dev-GenerateModule
  main-is:             GenerateModule.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.9 && <4.10
                     , dev-utils
  hs-source-dirs:      app
  default-language:    Haskell2010

test-suite spec
  type: exitcode-stdio-1.0
  hs-source-dirs: test
  main-is: Spec.hs
  build-depends: base >= 4.7 && < 5
               , dev-utils
               , hspec